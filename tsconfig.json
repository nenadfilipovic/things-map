{
  "compilerOptions": {
    // Define base url to easier load files.
    "baseUrl": ".",

    // Specify library files to be included in the compilation.
    "lib": ["ES2020"],

    // Specify ECMAScript target version.
    "target": "ES2020",

    // Specify module code generation.
    "module": "CommonJS",

    // Redirect output structure to the directory.
    "outDir": "dist",

    // Do not emit comments to output.
    "removeComments": true,

    // Specify the root directory of input files.
    "rootDir": "src",

    // Enable all strict type-checking options.
    "strict": true,

    // Enables emit interoperability between CommonJS and ES Modules
    // via creation of namespace objects for all imports.
    "esModuleInterop": true,

    // Disallow inconsistently-cased references to the same file.
    "forceConsistentCasingInFileNames": true,

    // Skip type checking of declaration files.
    "skipLibCheck": true
  },
  // Which files you want to include, I don't want client
  // files here.
  "include": ["src/**/*"],

  // Which files from include I want to exclude,
  // I want to exclude all test files because I don't need them compiled.
  "exclude": ["**/*.test.ts"]
}
