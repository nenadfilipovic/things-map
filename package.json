{
  "name": "things-map-server",
  "version": "0.0.1",
  "author": "Nenad Filipovic",
  "license": "MIT",
  "description": "Backend for things-map application",
  "main": "src/index.js",
  "scripts": {
    "test:local": "jest",
    "test:ci": "jest --coverage",
    "test": "is-ci test:ci test:local",
    "test:e2e:ci": "",
    "test:e2e:local": "",
    "test:e2e": "is-ci test:e2e:ci test:e2e:local",
    "lint": "eslint --ignore-path .gitignore .",
    "format": "prettier --ignore-path .gitignore --write .",
    "validate": "run-p format test",
    "postinstall": "husky install",
    "setup": "knex migrate:latest && knex seed:run",
    "start:watch": "ts-node-dev --respawn --transpile-only src",
    "generate": "graphql-codegen"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.19.4",
    "@graphql-codegen/typescript": "1.19.0",
    "@graphql-codegen/typescript-operations": "^1.17.12",
    "@graphql-codegen/typescript-resolvers": "1.18.0",
    "@graphql-tools/load-files": "^6.2.5",
    "@graphql-tools/merge": "^6.2.6",
    "@types/jest": "^26.0.17",
    "@types/koa-session": "^5.10.3",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "apollo-server-koa": "^2.19.0",
    "envalid": "^6.0.2",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "graphql": "^15.4.0",
    "graphql-config": "^3.2.0",
    "graphql-schema-linter": "^1.0.1",
    "husky": "^5.0.4",
    "is-ci-cli": "^2.1.2",
    "jest": "^26.6.3",
    "jest-runner-eslint": "^0.10.0",
    "knex": "^0.21.12",
    "koa": "^2.13.0",
    "koa-session": "^6.1.0",
    "lint-staged": "^10.5.2",
    "npm-run-all": "^4.1.5",
    "objection": "^2.2.3",
    "pg": "^8.5.1",
    "prettier": "^2.2.0",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.0.0",
    "typescript": "^4.1.2"
  },
  "dependencies": {},
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nenadfilipovic/things-map.git"
  },
  "jest-runner-eslint": {
    "cliOptions": {
      "ignorePath": "./.gitignore"
    }
  },
  "lint-staged": {
    "**/*": [
      "prettier --ignore-unknown --write",
      "jest --findRelatedTests"
    ],
    "**/*.graphql": [
      "graphql-schema-linter --except relay-page-info-spec"
    ]
  },
  "keywords": [
    "iot",
    "things",
    "map"
  ],
  "bugs": {
    "url": "https://github.com/nenadfilipovic/things-map/issues"
  },
  "homepage": "https://github.com/nenadfilipovic/things-map#readme"
}
